<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletopSpells.Pages.CharacterOverviewPage"
             Title="Character Spells">

    <Grid BackgroundColor="Black" Margin="0, 10, 0, 0">
        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <!-- Row 1 -->
            <RowDefinition Height="auto" />
            <!-- Row 2 -->
            <RowDefinition Height="auto" />
            <!-- Row 3 -->
            <RowDefinition Height="*" />
            <!-- Row 4 -->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Column 1 -->
            <ColumnDefinition Width="*" />
            <!-- Column 2 -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Show Spells -->
        <Button Text="Spells"
                Grid.Column="0"
                Grid.Row="0"
                Clicked="OnCharacterSelected"
                BackgroundColor="green"
                Margin="5"/>

        <Button Text="Spells per day"
                Grid.Column="1"
                Grid.Row="0"
                Clicked="OnSpellPerDaySelected"
                BackgroundColor="green"
                Margin="5"/>

        <Button Text="Spell log"
                Grid.Column="1"
                Grid.Row="1"
                Clicked="OnSpellLogSelected"
                BackgroundColor="green"
                Margin="5"/>

        <!--Remove Characters Button-->
        <Button Text="Delete character" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Grid.Row="3" 
                Clicked="OnDeleteCharacterClicked" 
                BackgroundColor="Red"
                Margin="5"/>
    </Grid>
</ContentPage>
