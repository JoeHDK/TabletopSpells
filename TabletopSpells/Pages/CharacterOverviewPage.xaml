<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletopSpells.Pages.CharacterOverviewPage"
             Title="Character Spells">



    <Grid BackgroundColor="Black" Margin="10, 10, 0, 0">
        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Show Spells --> 
        <Button Text="Show spells"
                Grid.Column="1"
                Grid.Row="0"
                Clicked="OnCharacterSelected"
                CornerRadius="25" 
                Margin="100, 0, 100, 5"
                BackgroundColor="green"/>

        <!-- Search Spells -->
        <Button Text="Search spells"
                Grid.Column="1"
                Grid.Row="1"
                Clicked="OnAddSpellClicked"
                CornerRadius="25" 
                Margin="100, 0, 100, 5"
                BackgroundColor="green"/>

        <!--Remove Characters Button-->
        <Button Text="Delete character" 
                Grid.Column="1" 
                Grid.Row="2" 
                Clicked="OnDeleteCharacterClicked" 
                CornerRadius="25" 
                Margin="100, 0, 100, 5"
                BackgroundColor="Red"/>
    </Grid>
</ContentPage>
