<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletopSpells.Pages.CharacterOverviewPage"
             Title="Character Spells">

    <!-- Searchbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Search Spells"
                     IconImageSource="menu.png"
                     Clicked="OnMenuClicked" 
                     Priority="0" 
                     Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid BackgroundColor="Black" Margin="10, 10, 0, 0">
        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Show Spells -->
        <Button Text="Spells"
                Grid.Column="1"
                Grid.Row="0"
                Clicked="OnCharacterSelected"
                CornerRadius="25" 
                Margin="100, 0, 100, 5"
                BackgroundColor="green"/>

        <!--Remove Characters Button-->
        <Button Text="Delete character" 
                Grid.Column="1" 
                Grid.Row="2" 
                Clicked="OnDeleteCharacterClicked" 
                CornerRadius="25" 
                Margin="100, 0, 100, 5"
                BackgroundColor="Red"/>
    </Grid>
</ContentPage>
