<!-- SpellListPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletopSpells.Pages.SpellListPage"
             Title="Spells">

    <!-- Searchbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Filter Spells"
                     IconImageSource="menu.png"
                     Clicked="OnMenuClicked" 
                     Priority="0" 
                     Order="Primary"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SearchBar x:Name="SpellSearchBar"
                   Grid.Row="0"
                   Placeholder="Search spells..."
                   TextChanged="OnSearchTextChanged" />


        <CollectionView x:Name="SpellCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSpellSelected"
                        Grid.Row="1"
                        ItemsSource="{Binding FilteredSpells}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}"
                           Margin="10"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>